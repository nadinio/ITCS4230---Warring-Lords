var hovering = 0; 
/****************************End Turn Button*************************************************/
if (point_in_rectangle(window_mouse_get_x(),window_mouse_get_y(),615,300,780,330) &amp;&amp; hovering = 0)// check for mouse hovering 
{//this hover detection doesnt scales well
    draw_set_alpha(0.8); //If the mouse is in the the area of our button then we set the opacity to 0.8
    hovering = 1; //Set the hovering to 1 since we are hovering over the first button
};
else //If the mouse is not inside the point
{
    draw_set_alpha(0.5); //Set the alpha back to normal
};
/*making the button and the text*/
draw_set_color(c_gray); //Set the color to gray for our button 
draw_rectangle(615,300,780,330,false); //Draw our button
draw_set_color(c_black); //Set the color to black 
draw_set_halign(fa_center); //Center text (horizontal)
draw_set_valign(fa_center); //Center text (verticle)
draw_text(700, 315,"End Turn"); //Draw our button text

/*bug testing code*/
//draw_text(700, 60,global.state);

/*handle what happens when the button is pressed */
if mouse_check_button_pressed(mb_left) &amp;&amp; hovering &gt; 0 //If the mouse button is pressed &amp; we are hovering over a button
{
    switch (global.state)
    {
        case states.red_turn: 
        {
            with (par_red)
            {
                /*reset the move and attack variables for the red player after his turn ends*/
                pixel_dist = orig_pixel_dist;
                attacked = false;
            }
            if(instance_number(obj_blue_capital)&gt; 0){global.state = states.blue_turn;}
            else 
            { 
                show_message("Red Team Wins")
                room_goto(rm_Menu);
            }
        } 
        break;
        
        case states.blue_turn: 
        {
            with (par_blue)
            {
                /*reset the move and attack variables for the blue player after his turn ends*/
                pixel_dist = orig_pixel_dist;
                attacked = false;
            }
            if(instance_number(obj_red_capital)&gt; 0){global.state = states.red_turn;} 
            else 
            {
                show_message("Blue Team Wins")
                room_goto(rm_Menu);
            }
            //show_message("its is now red players turn")
        } 
        break;  
    };
    show_message("Do Not cheat")
};

